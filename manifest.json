{
  "manifest_version": 3,
  "name": "FocusGuardian",
  "version": "1.0.0",
  "description": "Guard your focus against distractions! FocusGuardian helps you block distracting sites so you can remain concentrated on what matters most.",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": ["tabs", "storage"],
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  }
}
